class Solution {
    public int maxArea(int[] height) {
        int n = height.length;
        int max = 0;
        int l = 0 , r = n-1;
        while(l<r){
            int w = r-l;
            int h = Math.min(height[l] , height[r]);
            int v = w*h;
            max = Math.max(max , v);
            if(height[l]<height[r]){
                l++;
            }
            else{
                r--;
            }
        }
        return max;
    }
}
