class Solution {
    public int mySqrt(int x) {
        if(x < 2) return x;

        int s = 1 , e = x/2 , ans = 0;
        while(s<=e){
            int m = s+(e-s)/2;
            long sq = (long)m*m;
            if(sq == x){
                return m;
            }
            else if(sq > x){
                e = m-1;
            }
            else{
                ans = m;
                s = m+1;
            }
        }
        return ans;
    }
}
