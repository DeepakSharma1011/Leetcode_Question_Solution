class Solution {
    public boolean isPalindrome(int x) {
        String str = Integer.toString(x);
        char[] c = str.toCharArray();
        int n = str.length();
        int left = 0 , right = n-1;
        while(left < right){
            if(c[left] != c[right]){
                return false;
            }
            left++; right--;
        }
        return true; 
    }
}
